FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          PCG;
        preconditioner	DIC;
        tolerance       1e-07;
        relTol          0.05;
    }

    "(U|k|epsilon|omega|f|v2|R)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-07;
        relTol          0.1;
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors 0;
    consistent      yes;

    pRefCell    0;
    pRefValue    0;

    residualControl
    {
        p               5e-1;
        Ux              1e-7;
		Uy				5e-1;
		Uz				5e-1;
        "(k|epsilon|omega|f|v2|R)" 5e-7;
    }
}

relaxationFactors
{
    fields
    {
	p		0.9;	//0.15
    }
    equations
    {
        U               		0.9;	//0.15 
        "(k|epsilon|omega)"            	0.9; 	//0.15
    }
}


